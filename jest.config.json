{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.{js,jsx,ts,tsx}",
    "!**/node_modules/**",
    "!assets/**"
  ],
  "coverageDirectory": "jest_coverage",
  "globals": {
    "ts-jest": {
      "isolatedModules": true
    }
  },
  "preset": "babel-jest",
  "setupFiles": [
    "./jest-setup.js"
  ],
  "testEnvironment": "node",
  "testRegex": "/__tests__/jest/.*\\.(j|t)sx?$",
  "testPathIgnorePatterns": [
    "/node_modules/",
    "<rootDir>/_book",
    "<rootDir>/lib",
    "<rootDir>/scratch",
    "<rootDir>/template",
    "<rootDir>/src",
    "<rootDir>/docs"
  ]
}
